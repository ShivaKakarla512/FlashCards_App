<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_background2"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/answer_choice_4"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/card_background3"
        android:gravity="center"
        android:text="Donald Trump"
        android:textColor="#000000"
        android:textSize="25sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/answer_choice_3"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="@drawable/card_background3"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="#000000"
        android:textSize="25sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/answer_choice_2"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:background="@drawable/card_background3"
        android:gravity="center"
        android:text="George H. W. Bush"
        android:textColor="#000000"
        android:textSize="25sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/answer_choice_1"
        android:layout_width="266dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="177dp"
        android:background="@drawable/card_background3"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textColor="#000000"
        android:textSize="25sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/view_answer_choices"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/open_eye" />

    <ImageView
        android:id="@+id/hide_answer_choices"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/closed_eye"
        android:visibility="gone" />

</android.widget.RelativeLayout>